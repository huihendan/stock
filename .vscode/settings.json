{
    "go.goroot": "/usr/local/go/bin/go", 
    "go.toolsManagement.autoUpdate": false,

    "go.useLanguageServer": true,
    "gopls": {
        "ui.semanticTokens": true,  // 增强代码高亮
        "analyses": {
            "unusedparams": false,
            "unusedvariable": false,
            "unusedwrite": false,
            "fieldalignment": false
        },
        "formatting.gofumpt": false  // 禁用gofumpt格式化
    },
    "go.buildFlags": ["-tags=ignore_unused"],
    "go.testFlags": ["-tags=ignore_unused"],
    "go.lintFlags": ["--disable=unused"],
    "go.vetFlags": ["-composites=false"],
    "go.formatTool": "gofmt",  // 使用gofmt而不是goimports
    "editor.formatOnSave": false,  // 禁用保存时格式化
    "go.gocodeAutoBuild": false  // 禁用自动构建
}